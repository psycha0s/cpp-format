{
	"name": "cpp-format",
	"displayName": "C++ format",
	"description": "A clang-format based C++ code formatter",
	"version": "1.0.1",
	"publisher": "psycha0s",
	"repository": "https://github.com/psycha0s/cpp-format",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Formatters"
	],
	"dependencies": {
		"sax": "^1.2.4"
	},
	"activationEvents": [
		"onLanguage:cpp",
		"onLanguage:c"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "C++ Format",
			"properties": {
				"cpp-format.executable": {
					"type": "string",
					"default": "clang-format",
					"description": "clang-format executable path"
				},
				"cpp-format.executable.windows": {
					"type": "string",
					"default": "",
					"description": "clang-format executable path on Windows"
				},
				"cpp-format.executable.linux": {
					"type": "string",
					"default": "",
					"description": "clang-format executable path on Linux"
				},
				"cpp-format.executable.osx": {
					"type": "string",
					"default": "",
					"description": "clang-format executable path on macOS"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/sax": "^1.2.1",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
